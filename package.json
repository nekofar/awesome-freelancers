{
  "name": "awesome-freelancers",
  "version": "1.0.0",
  "description": "This repository is a place to collect a list of Iranian freelancers with expertise in different areas.",
  "main": "scripts/index.js",
  "repository": "git@github.com:nekofar/awesome-freelancers.git",
  "author": "Milad Nekofar <milad@nekofar.com>",
  "license": "MIT",
  "scripts": {
    "update": "node . > README.md",
    "prettier": "prettier \"**/*.{js,md,json}\" --write",
    "preexport": "mkdir -p out; cp -av assets out",
    "export": "npx markdown-to-html --config config.json --output out/index.html --no-dark-mode --markdown-style-theme light",
    "prestart": "npm run export",
    "start": "npx wrangler pages dev out"
  },
  "devDependencies": {
    "json2md": "2.0.0",
    "lodash": "4.17.21",
    "markdown-to-html-cli": "3.5.2",
    "prettier": "2.8.4",
    "wrangler": "2.9.1"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  }
}
